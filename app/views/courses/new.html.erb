<div class="container">
    <div class="row m-auto">
        <div class="col-6 m-auto">
            <h2 class="mt-set mt-5 text-capitalize font-weight-bold text-center">create course</h2>

            <%= form_with(model: @course, local: true) do |f| %>
            <div class="form-group">
                <%=f.label "Course Name", class:"text-capitalize font-weight-bold" %><br>
                <%=f.text_field :name ,class:"form-control"%>
            </div>
            <div class="form-group">
                <%=f.label "Course Description", class:"text-capitalize font-weight-bold" %><br>
                <%=f.text_field :description,  class:"form-control"%>
            </div>

            <%=f.submit class:"btn btn-primary"%>
            <% end -%>
        </div>
    </div>
</div>